{
  "name": "repelthedark-client",
  "version": "0.1.0",
  "description": "Client for the Repel the Dark game",
  "main": "main.js",
  "private": true,
  "scripts": {
    "build": "npm run build-js && npm run build-fomantic && npm run build-jquery",
    "build-jquery": "cp -r node_modules/jquery/dist dist/jquery",
    "build-fomantic": "cd semantic && npx gulp build && cp -r dist ../dist/semantic",
    "build-js": "npx webpack && cp src/html/index.html dist/index.html",
    "lint-fix": "npm run test-lint -- --fix",
    "prestart": "npm run build",
    "start": "electron-forge start",
    "prestart-web": "npm run build",
    "start-web": "http-server -p 8000 ./dist",
    "test": "npm run test-lint && npm run test-unit",
    "test-lint": "semistandard --env mocha",
    "test-unit": "nyc --all --check-coverage=true --reporter=html mocha --reporter=mochawesome test/unit/**",
    "prepackage": "npm run build",
    "package": "electron-forge package",
    "premake": "npm run build",
    "make": "electron-forge make"
  },
  "author": "hale9644",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@rollup/plugin-node-resolve": "^11.1.0",
    "chai": "^4.2.0",
    "css-loader": "^5.0.1",
    "electron": "^11.2.0",
    "http-server": "^0.12.3",
    "mocha": "^8.2.1",
    "mochawesome": "^6.2.1",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3",
    "raw-loader": "^4.0.2",
    "semistandard": "^16.0.0",
    "sinon": "^9.2.3",
    "style-loader": "^2.0.0",
    "svg-url-loader": "^7.1.1",
    "webpack": "^5.15.0",
    "webpack-cli": "^4.3.1"
  },
  "dependencies": {
    "colyseus.js": "^0.14.1",
    "electron-squirrel-startup": "^1.0.0",
    "fomantic-ui": "^2.8.7",
    "fomantic-ui-css": "^2.8.7",
    "jquery": "^3.5.1",
    "mithril": "^2.0.4"
  },
  "nyc": {
    "exclude": [
      "coverage/**",
      "mochawesome-report/**",
      "out/**",
      "dist/**",
      "test/**",
      "semantic/**"
    ],
    "branches": 80,
    "lines": 80,
    "functions": 80,
    "statements": 80
  },
  "semistandard": {
    "ignore": [
      "coverage/**",
      "mochawesome-report/**",
      "out/**",
      "dist/**",
      "semantic/**"
    ]
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "repelthedark_client"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
