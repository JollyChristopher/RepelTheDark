{
  "private": true,
  "name": "repelthedark-server",
  "version": "0.1.0",
  "description": "server for repelthedark",
  "scripts": {
    "start": "node src/index.js || exit 0",
    "loadtest": "colyseus-loadtest loadtest/example.js --room my_room --numClients 2",
    "lint-fix": "npm run test-lint -- --fix",
    "test": "npm run test-lint && npm run test-unit",
    "test-lint": "semistandard --env mocha",
    "test-unit": "nyc --all --check-coverage=true --reporter=html mocha --reporter=mochawesome test/unit/**"
  },
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/colyseus/create-colyseus/issues"
  },
  "homepage": "https://github.com/colyseus/create-colyseus#readme",
  "devDependencies": {
    "@colyseus/loadtest": "^0.14.0",
    "chai": "^4.2.0",
    "mocha": "^8.2.1",
    "mochawesome": "^6.2.1",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3",
    "semistandard": "^16.0.0",
    "sinon": "^9.2.3"
  },
  "dependencies": {
    "@colyseus/monitor": "^0.12.2",
    "@colyseus/social": "^0.10.9",
    "colyseus": "^0.14.0",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "express-jwt": "^6.0.0"
  },
  "nyc": {
    "exclude": [
      "coverage/**",
      "mochawesome-report/**",
      "loadtest/**",
      "test/**"
    ],
    "branches": 80,
    "lines": 80,
    "functions": 80,
    "statements": 80
  },
  "semistandard": {
    "ignore": [
      "coverage/**",
      "mochawesome-report/**",
      "loadtest/**"
    ]
  }
}
